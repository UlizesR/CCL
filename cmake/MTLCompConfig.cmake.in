@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/MTLCompTargets.cmake")

check_required_components(MTLComp)

# Provide variables for downstream projects
set(MTLComp_INCLUDE_DIRS "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@/mtlcomp")
set(MTLComp_LIBRARIES MTLComp::mtlcompute)

# Find required frameworks for users
if(NOT METAL_FRAMEWORK)
    find_library(METAL_FRAMEWORK Metal REQUIRED)
endif()
if(NOT FOUNDATION_FRAMEWORK)
    find_library(FOUNDATION_FRAMEWORK Foundation REQUIRED)
endif()
if(NOT COREGRAPHICS_FRAMEWORK)
    find_library(COREGRAPHICS_FRAMEWORK CoreGraphics REQUIRED)
endif()
if(NOT IMAGEIO_FRAMEWORK)
    find_library(IMAGEIO_FRAMEWORK ImageIO REQUIRED)
endif()
if(NOT UNIFORMTYPEIDENTIFIERS_FRAMEWORK)
    find_library(UNIFORMTYPEIDENTIFIERS_FRAMEWORK UniformTypeIdentifiers REQUIRED)
endif()

